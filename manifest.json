{
  "name": "ChromeBuddy",
  "description": "compilation of convenient tools",
  "version": "1.0",

  "icons": {
    "16": "assets/icon_16.png",
    "128": "assets/chromelogo_128.png"
  },

  "browser_action": {
    "default_popup": "index.html"
  },

  "permissions": ["webRequest", "webRequestBlocking", "http://*/*", "https://*/*"],

  "background": {
    "scripts": ["background.js"]
  },

  "manifest_version": 2

}
